         "args": [
          "set +x\n\n source /repo/environment\n\nexport source=${parameters.source}\ncd /repo/data-migration/\nls -ltra \nif [ \"$source\" == \"3.9\" ]; then\n\necho \"upgrading  v3.9.x to v3.10\"\npython3 migration_v3.9.x_to_v3.10.py visibilitydb $host platformdb $host opsmx $host oesdb $host auditdb $host $port admin $saporpassword\n \nexport source=\"3.10\"\n\n\nelif [ \"$source\" == \"3.10\" ]; then\necho \"upgrading  v3.10.x to v3.11\"\n\n    #export cmd=\"python3 migration_v3.10_v3.11.py auditdb $host opsmx $host http://oes-audit-service:8097 $port\"\n    \n    \n      python3 migration_v3.10_v3.11.py auditdb $host opsmx $host  http://oes-audit-service-v311:8097 $port\n\n     \n     # echo $cmd\n      \n      export source=\"3.11\"\n\nelif [ \"$source\" == \"3.11\" ]; then\necho \"upgrading  v3.11 to v3.11.1\"\n\n    export cmd=\"python3 migration_v3.11_to_v3.11.x.py opsmx $host $port\"\n    \n    \n    echo $cmd\n    \n    export source=\"3.11.1\"\n    \nelif [ \"$source\" == \"3.11.1\" ]; then\necho \"upgrading  v3.11.1 to v3.12.4\"\n\n    export cmd=\"python3 migration_v3.11_to_v3.12.py platformdb $host oesdb $host  opsmx $host auditdb $host visibilitydb $host $port\"\n    \n    echo $cmd\n    \n    export source=\"3.12\"\n    \nelif [ \"$source\" == \"3.12.4\" ]; then\necho \"upgrading  v3.12.4 to v3.12.5\"\n\n    export cmd=\"python3 migration_v3.12.4_to_v3.12.5.py opsmx $host $port $pguser $pgpassword\"\n    \n    echo $cmd\n    \n    export source=\"3.12.5\"\n    \nelif [  \"$source\" == \"3.12.5\" ]; then\n\n echo \"upgrading  v3.12.5 to v3.12.6\"\n\n    export cmd=\"python3 migration_v3.12.5_to_v3.12.6.py auditdb $host visibilitydb $host  platformdb $host $port $pguser $pgpassword\"\n    \n    echo $cmd\n    \n    export source=\"3.12.6\"\n     \nelse\n   \n   echo \"Some went wrong in mapping Migration script\"\n    \nfi"
         ],
         "command": [
          "/bin/bash",
